<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/statusBar</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlHighlight">@color/primaryVariant</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>


    <style name="text_button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
    </style>

    <style name="text_nav">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_light</item>
    </style>

    <!-- run result style -->

    <style name="text_label_runresult">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_light</item>
    </style>

    <style name="edit_text_runresult">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/eczar</item>
    </style>

    <!-- card style -->

    <style name="text_label_card">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="text_value_card">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:fontFamily">@font/eczar</item>
    </style>

    <!-- stats style -->

    <style name="text_title_stats">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_light</item>
    </style>

    <style name="text_count_stats">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/eczar</item>
    </style>

    <style name="text_label_stats">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_light</item>
    </style>

    <style name="text_value_stats">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/eczar</item>
    </style>

    <style name="text_unit_stats">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_light</item>
    </style>

</resources>
